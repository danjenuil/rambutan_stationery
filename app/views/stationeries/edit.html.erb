<% provide(:title, "Edit stationery") %>
<%= form_for @stationery do |f| %>

<%= f.label :name %>
<%= f.text_field :name, autofocus: true, class: "form-control" %>
<br/>
<%= f.label :product_code %>
<%= f.text_field :product_code, autofocus: true, class: "form-control" %>
<br/>
<%= f.label :cupboard_num, "Cupboard number" %>
<%= f.number_field :cupboard_num, min: 1, max: 2, autofocus: true, class: "form-control" %>
<br/>
<%= f.label :quantity %>
<%= f.number_field :quantity, min: 0, autofocus: true, class: "form-control" %>
<br/>
<%= f.label :stationery_type, "Stationery type" %>
</br>
<%= f.select :stationery_type, Stationery.stationery_types.keys, {}, class: "form-control" %>
<%# <%= f.select :stationery_type, options_from_enum_for_select(@stationery, :stationery_type), class: "form-control" %>
<br/>
<br/>
<%= f.submit "Finish edit", class: "btn btn-primary" %>

<% end %>