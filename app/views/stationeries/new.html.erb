<% provide :title, "Add a stationery" %>

<div class="container">

  <div class="col-md-6 col-md-offset-3 containe">
    <%= form_for(@stationery) do |f| %>
      <p>Add a stationery</p>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      </br>
      <%= f.label :product_code %>
      <%= f.text_field :product_code, class: "form-control" %>
      </br>
      <%= f.label :cupboard_num, "Cupboard number" %>
      <%= f.text_field :cupboard_num, class: "form-control" %>
      </br>
      <%= f.submit "Add item", class: "btn btn-primary" %>
      </br>
    <% end %>
  </div>
</div>